<Window x:Class="ImageResearchNew.AppWindows.CompareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageResearchNew.AppWindows"
        xmlns:vs="clr-namespace:ImageResearchNew.View"
        xmlns:converters="clr-namespace:ImageResearchNew.Converters"
        mc:Ignorable="d"
        Title="Окно сравнения"
        Style="{StaticResource CustomWindow}"
        WindowState="Maximized"
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}}"
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}">

    <StackPanel>
        <vs:DynamicGridView x:Name="DynamicGridView"
                            DataContext="{Binding}" />
        <TextBlock Text="{Binding GridHeight}"
                   Foreground="Red" />
    </StackPanel>
</Window>
