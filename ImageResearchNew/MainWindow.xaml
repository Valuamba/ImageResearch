<Window x:Class="ImageResearchNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vs="clr-namespace:ImageResearchNew.View"
        xmlns:vms="clr-namespace:ImageResearchNew.ViewModel"
        xmlns:local="clr-namespace:ImageResearchNew"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Style="{StaticResource CustomWindow}"
        Title="Анализ изображений"
        Height="450"
        Width="800"
        WindowState="Maximized">

    <Window.Resources>
        <DataTemplate x:Key="CanvasDataTemplate">
            <vs:CanvasView DataContext="{Binding}"
                           AutomationProperties.AutomationId="CanvasUserControl" />
        </DataTemplate>
    </Window.Resources>

    <Window.DataContext>
        <vms:ControllerViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0"
              AutomationProperties.AutomationId="MainMenu">
            <MenuItem Header="Файл"
                      AutomationProperties.AutomationId="FileMenuItem">
                <MenuItem Header="Открыть"
                          Command="{Binding OpenImageCommand}"
                          AutomationProperties.AutomationId="OpenImageMenuItem" />
                <Separator />
                <MenuItem Header="Настройки"
                          AutomationProperties.AutomationId="SettingsMenuItem"
                          Click="Settings_ClickMenuItem" />
            </MenuItem>
            <MenuItem Header="Редактировать"
                      AutomationProperties.AutomationId="EditMenuItem">
                <MenuItem Header="Сетка"
                          Command="{Binding ShowGridCommand}"
                          CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}"
                          AutomationProperties.AutomationId="GridMenuItem"
                          IsCheckable="True"
                          IsChecked="{Binding Path=IsShowGrid}" />
                <MenuItem Header="Информация о блоках"
                          Command="{Binding ToolSummaryResult}" />
                <MenuItem Header="Добавить к сравнению"
                          Command="{Binding ToolSummaryResult}" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <vs:ToolboxView DataContext="{Binding Path=ToolBox}"
                                AutomationProperties.AutomationId="ToolUserControl" />
                <ListBox ItemsSource="{Binding CanvasList}"
                         Width="100"
                         Height="200"
                         BorderBrush="Black"
                         Margin="10"
                         SelectionMode="Extended"
                         Name="some"
                         SelectionChanged="Canvas_ListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding EditedImage.Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox ItemsSource="{Binding ViewMethods}"
                         Width="100"
                         Height="200"
                         BorderBrush="Black"
                         Margin="10"
                         SelectionMode="Single"
                         SelectionChanged="ViewMethods_ListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="Oscilloscope"
                        Width="100"
                        Height="100"
                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.TriggerOscilloscope}"/>
            </StackPanel>


            <Grid Grid.Column="2"
                  Margin="10,0,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">

                    <TabControl ItemsSource="{Binding CanvasList}"
                                ContentTemplate="{StaticResource CanvasDataTemplate}"
                                SelectedItem="{Binding FocusedCanvas}">
                        <TabControl.ItemContainerStyle>
                            <Style TargetType="{x:Type TabItem}">
                                <Setter Property="Header"
                                        Value="{Binding EditedImage.Name}" />
                            </Style>
                        </TabControl.ItemContainerStyle>

                    </TabControl>

                </StackPanel>

                <vs:ProcessorsView Grid.Row="2"
                                   AutomationProperties.AutomationId="ProcessorsUserControl" />

                <StackPanel Grid.Row="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Scale"
                                   Grid.Column="0"
                                   Style="{StaticResource CustomTextBlock}" />
                        <Slider Grid.Column="2"
                                Minimum="0"
                                Maximum="10000000"
                                x:Name="scaleSlider"
                                TickFrequency="10000"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                Value="{Binding ScaleValue, NotifyOnTargetUpdated=True}"
                                AutomationProperties.AutomationId="imageScale">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="ValueChanged">
                                    <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.ScaleValueChanged}"
                                                           CommandParameter="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Slider>
                        <TextBlock Grid.Column="4"
                                   Text="{Binding Path=Value, ElementName=scaleSlider}"
                                   HorizontalAlignment="Right"
                                   Style="{StaticResource CustomTextBlock}" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
